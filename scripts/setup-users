#!/bin/bash


set -xe

sleep 20

id -u "$SPARK_USER_NAME" && echo 'id found' || echo 'id not found there is like to be a problem with LDAP'

getent group "$SPARK_GROUP_NAME" && echo 'group id found' || echo 'group id not found there is like to be a problem with LDAP'

date +'%Y-%m-%d:%H:%m:%S'


